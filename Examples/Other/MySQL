CREATE TABLE currentPlayerInfo (
    GSID int PRIMARY KEY NOT null AUTO_INCREMENT,
    gameStoreName varchar(255),
	  playersTotal int,
    playersMagic int,
    playersPokemon int,
    playersYugioh int,
    playersDND int,
    playersWarhammer int,
    playersOther int
);

